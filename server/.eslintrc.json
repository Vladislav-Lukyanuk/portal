{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        //конфиг гугла
        "google",
        // базовые правила для ts
        "plugin:@typescript-eslint/recommended",
        // правила импорта для ts
        "plugin:import/typescript",
        // Отключает прафила prettier, которые могут конфликтовать с eslint
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        //Запускает плагин для отслеживания кода в стиле TS
        "@typescript-eslint",
        //Запускает плагин для отслеживания импортов
        "eslint-plugin-import",
        //Запускает Prettier как правила ESLint
        "eslint-plugin-prettier"
    ],
    "rules": {
        "require-jsdoc": "off",
        "new-cap": "off"
    }
}
